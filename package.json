{
    "name": "@listinha/api",
    "version": "1.0.0",
    "description": "",
    "main": "src/server.ts",
    "scripts": {
        "start": "dotenv -e .env -- node ./dist/server.js",
        "build": "tsc",
        "dev": "dotenv -e .env.development -- nodemon src/server.ts",
        "test": "dotenv -e .env.test -- jest --passWithNoTests",
        "db:migrate": "prisma migrate dev",
        "db:pull": "prisma db pull",
        "db:generate": "prisma generate",
        "test:db:push": "dotenv -e .env.test -- npx prisma db push",
        "dev:db:push": "dotenv -e .env.development -- npx prisma db push",
        "prepare": "husky install"
    },
    "author": {
        "email": "ruanfailache@gmail.com",
        "name": "Ruan Failache",
        "url": "https://github.com/RuanFailache"
    },
    "lint-staged": {
        "*.ts": [
            "prettier --write",
            "eslint --fix",
            "pnpm test"
        ]
    },
    "dependencies": {
        "@prisma/client": "^5.2.0",
        "bcrypt": "^5.1.1",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "dotenv-cli": "^7.3.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.8.0",
        "zod": "^3.22.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.1",
        "@commitlint/config-conventional": "^17.7.0",
        "@faker-js/faker": "^8.0.2",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.4",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/node": "^20.5.9",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^6.6.0",
        "@typescript-eslint/parser": "^6.6.0",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import-helpers": "^1.3.1",
        "husky": "^8.0.0",
        "jest": "^29.6.4",
        "lint-staged": "^14.0.1",
